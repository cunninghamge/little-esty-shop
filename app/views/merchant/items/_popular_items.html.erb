<section id="top_items">
  <h2>Top Items</h2>
  <ol>
    <% items.each do |item| %>
      <li id="top-<%= item.id %>">
      <%= link_to item.name, item_path(item)%> sales: $
      <%= item.total_revenue %><br>
      <%= "Top selling date for #{item.name} was #{format_date(item.top_sales_day)}" %>
      </li>
    <% end %>
  </ol>
</section>
