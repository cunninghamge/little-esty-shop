<h1>Discounts</h1>
<%= link_to "New Discount", new_merchant_discount_path(params[:merchant_id]) %>
<ul><% @discounts.each do |discount| %>
  <li><%= discount_details(discount) %>
    <%= button_to "View Details", discount_path(discount), method: :get%>
    <%= button_to "Delete", discount_path(discount, merchant_id: params[:merchant_id]), method: :delete %></li>
  <% end %>
</ul>
